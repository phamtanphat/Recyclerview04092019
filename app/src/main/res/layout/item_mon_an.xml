<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageviewMonAn"
        android:src="@mipmap/ic_launcher"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textviewTen"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:textSize="25sp"
            android:text="Pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/textviewTen"
            android:id="@+id/textviewMoTa"
            android:textSize="20sp"
            android:text="Spicy Chicken Pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/textviewMoTa"
            android:id="@+id/textviewTGia"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="25sp"
            android:text="RS 310.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>